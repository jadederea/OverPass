<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Disable app sandbox to allow keyboard input monitoring -->
	<key>com.apple.security.app-sandbox</key>
	<false/>
	<!-- Required for USB device access (keyboard filtering) -->
	<key>com.apple.security.device.usb</key>
	<true/>
	<!-- Required for Bluetooth keyboard support -->
	<key>com.apple.security.device.bluetooth</key>
	<true/>
	<!-- Required for Input Monitoring permission (capturing keystrokes) -->
	<key>com.apple.security.device.input-monitoring</key>
	<true/>
	<!-- Required for Accessibility permission (intercepting keyboard input) -->
	<key>com.apple.security.device.accessibility</key>
	<true/>
	<!-- Enable hardened runtime for security -->
	<key>com.apple.security.cs.allow-jit</key>
	<false/>
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<false/>
	<key>com.apple.security.cs.disable-library-validation</key>
	<false/>
</dict>
</plist>
